@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="top">
  <span class="links">@Html.ActionLink("Home", "Index", "Home")</span>
  <span class="links">@Html.ActionLink("Add new stylist", "Create")</span>
</div>

<h3>List of stylists:</h3>
<hr />

@if (@Model.Count == 0)
{
  <p>No stylists have been added yet.</p>
} 

@foreach (Stylist stylist in Model)
{
  <p class="stylists">@Html.ActionLink($"{stylist.FullName}", "Details", new { id = stylist.StylistId })</p>
}
