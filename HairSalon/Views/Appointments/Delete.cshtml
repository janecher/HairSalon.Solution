@{
  Layout = "_Layout";
}

@model HairSalon.Models.Appointment;

<div class="top">
  <span class="links">@Html.ActionLink("Back to client", "Details", "Clients", new { id = Model.ClientId })</span>
</div>

<h3>Are you sure you want to delete this appointment?</h3>
<hr />
<h4 class="names">@Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-secondary"/>
}
