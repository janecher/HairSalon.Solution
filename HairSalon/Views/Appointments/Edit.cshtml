@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<h3>Edit this appointment:</h3>
<hr />
<h4>@Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.AppointmentId)

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Date)
    @Html.TextBoxFor(model => model.Date, new { @type = "date" })
    @Html.LabelFor(model => model.Time)
    @Html.DropDownList("Time")
    @Html.LabelFor(model => model.Client)
    @Html.DropDownList("ClientId")
    
    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to client", "Details", "Clients")</p>