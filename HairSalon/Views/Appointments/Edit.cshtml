@{
  Layout = "_Layout";
}

@model HairSalon.Models.Appointment;

<div class="top">
  <span class="links">@Html.ActionLink("Back to client", "Details", "Clients", new { id = Model.ClientId })</span>
</div>

<h3>Edit this appointment:</h3>
<hr />
<h4 class="names">@Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.AppointmentId)
  @Html.HiddenFor(model => model.ClientId)

  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required  = "required"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Date)
    @Html.TextBoxFor(model => model.Date, new { @type = "date", @class = "form-control", @required  = "required" })
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Time)
    @Html.TextBoxFor(model => model.Time, new { @type = "number", min="8", max="12", @class = "form-control", @required  = "required" })
  </div>
  <input type="submit" value="Save" class="btn btn-secondary"/>
}

