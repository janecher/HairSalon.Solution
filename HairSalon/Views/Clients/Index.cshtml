@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h3>List of clients:</h3>

@if (@Model.Count == 0)
{
  <p>No clients have been added yet.</p>
} 

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.FullName}", "Details", new { id = client.ClientId })</li>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Back to list of stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Add new client", "Create")</p>